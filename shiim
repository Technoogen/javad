    <script>
        // داده‌های کامل تمام عناصر جدول تناوبی
        const elementsData = [
            // دوره 1
            { 
                number: 1,
                symbol: "H",
                name: "هیدروژن",
                mass: "1.008",
                category: "nonmetal",
                description: "سبک‌ترین و فراوان‌ترین عنصر در جهان",
                density: "0.08988 g/L",
                melting: "-259.16 °C",
                boiling: "-252.87 °C",
                electronegativity: "2.20",
                discoveredBy: "هنری کاوندیش",
                year: "1766",
                electronConfig: "1s¹",
                oxidationStates: "+1, -1",
                group: 1,
                period: 1
            },
            { 
                number: 2,
                symbol: "He",
                name: "هلیوم",
                mass: "4.0026",
                category: "noble",
                description: "گاز بی‌بو، بی‌رنگ و بی‌طعم",
                density: "0.1785 g/L",
                melting: "-272.20 °C",
                boiling: "-268.93 °C",
                electronegativity: "-",
                discoveredBy: "پییر جانسن",
                year: "1868",
                electronConfig: "1s²",
                oxidationStates: "0",
                group: 18,
                period: 1
            },
            // دوره 2
            { 
                number: 3,
                symbol: "Li",
                name: "لیتیم",
                mass: "6.94",
                category: "alkali",
                description: "سبک‌ترین فلز جامد",
                density: "0.534 g/cm³",
                melting: "180.54 °C",
                boiling: "1342 °C",
                electronegativity: "0.98",
                discoveredBy: "یوهان آگوست آرفودسون",
                year: "1817",
                electronConfig: "[He] 2s¹",
                oxidationStates: "+1",
                group: 1,
                period: 2
            },
            // بقیه عناصر به همین ترتیب اضافه شوند...
            // در اینجا فقط نمونه‌هایی آورده شده است
            
            // فلزات قلیایی خاکی
            { 
                number: 4,
                symbol: "Be",
                name: "بریلیم",
                mass: "9.0122",
                category: "alkaline",
                description: "فلز سخت و سبک",
                density: "1.85 g/cm³",
                melting: "1287 °C",
                boiling: "2470 °C",
                electronegativity: "1.57",
                discoveredBy: "لوئی نیکلاس ووکلین",
                year: "1798",
                electronConfig: "[He] 2s²",
                oxidationStates: "+2",
                group: 2,
                period: 2
            },
            
            // فلزات واسطه
            { 
                number: 26,
                symbol: "Fe",
                name: "آهن",
                mass: "55.845",
                category: "transition",
                description: "پرکاربردترین فلز در صنعت",
                density: "7.874 g/cm³",
                melting: "1538 °C",
                boiling: "2862 °C",
                electronegativity: "1.83",
                discoveredBy: "باستان",
                year: "قبل از تاریخ",
                electronConfig: "[Ar] 3d⁶ 4s²",
                oxidationStates: "+2, +3, +6",
                group: 8,
                period: 4
            },
            
            // لانتانیدها
            { 
                number: 57,
                symbol: "La",
                name: "لانتان",
                mass: "138.91",
                category: "lanthanide",
                description: "فلز نرم و چکش‌خوار",
                density: "6.162 g/cm³",
                melting: "920 °C",
                boiling: "3464 °C",
                electronegativity: "1.10",
                discoveredBy: "کارل گوستاف موساندر",
                year: "1839",
                electronConfig: "[Xe] 5d¹ 6s²",
                oxidationStates: "+3",
                group: 3,
                period: 6
            }
        ];

        // تولید جدول تناوبی به صورت دینامیک
        const periodicTable = document.getElementById('periodicTable');
        
        // ابتدا 118 خانه خالی ایجاد می‌کنیم
        for (let i = 0; i < 118; i++) {
            const cell = document.createElement('div');
            cell.className = 'element empty';
            periodicTable.appendChild(cell);
        }
        
        // سپس عناصر را در جایگاه صحیح قرار می‌دهیم
        elementsData.forEach(element => {
            const position = (element.period - 1) * 18 + (element.group - 1);
            if (periodicTable.children[position]) {
                periodicTable.children[position].innerHTML = `
                    <div class="number">${element.number}</div>
                    <div class="symbol">${element.symbol}</div>
                    <div class="name">${element.name}</div>
                `;
                periodicTable.children[position].className = `element ${element.category}`;
                periodicTable.children[position].setAttribute('data-element', element.name.toLowerCase());
            }
        });

        // نمایش اطلاعات عنصر هنگام کلیک
        const elements = document.querySelectorAll('.element:not(.empty)');
        const elementDetails = document.getElementById('elementDetails');
        const elementPreview = document.getElementById('elementPreview');
        
        elements.forEach(element => {
            element.addEventListener('click', function() {
                const elementName = this.getAttribute('data-element');
                const elementData = elementsData.find(el => el.name.toLowerCase() === elementName);
                
                if (elementData) {
                    // پر کردن اطلاعات
                    document.getElementById('elementName').textContent = elementData.name;
                    document.getElementById('elementSymbol').textContent = elementData.symbol;
                    document.getElementById('elementCategory').textContent = 
                        elementData.category === 'alkali' ? 'فلز قلیایی' :
                        elementData.category === 'alkaline' ? 'فلز قلیایی خاکی' :
                        elementData.category === 'transition' ? 'فلز واسطه' :
                        elementData.category === 'post-transition' ? 'فلز پس‌انتقالی' :
                        elementData.category === 'metalloid' ? 'شبه فلز' :
                        elementData.category === 'nonmetal' ? 'غیرفلز' :
                        elementData.category === 'halogen' ? 'هالوژن' :
                        elementData.category === 'noble' ? 'گاز نجیب' :
                        elementData.category === 'lanthanide' ? 'لانتانید' :
                        elementData.category === 'actinide' ? 'آکتینید' : '';
                    
                    document.getElementById('elementDescription').textContent = elementData.description;
                    document.getElementById('atomicNumber').textContent = elementData.number;
                    document.getElementById('atomicMass').textContent = elementData.mass;
                    document.getElementById('density').textContent = elementData.density;
                    document.getElementById('meltingPoint').textContent = elementData.melting;
                    document.getElementById('boilingPoint').textContent = elementData.boiling;
                    document.getElementById('electronegativity').textContent = elementData.electronegativity;
                    document.getElementById('discoveredBy').textContent = elementData.discoveredBy;
                    document.getElementById('discoveryYear').textContent = elementData.year;
                    document.getElementById('electronConfig').textContent = elementData.electronConfig;
                    document.getElementById('oxidationStates').textContent = elementData.oxidationStates;
                    
                    // تنظیم رنگ پیش‌نمایش
                    elementPreview.className = 'element-preview';
                    elementPreview.classList.add(elementData.category);
                    
                    // نمایش پنل اطلاعات
                    elementDetails.style.display = 'block';
                    
                    // اسکرول به پنل اطلاعات
                    elementDetails.scrollIntoView({ behavior: 'smooth' });
                }
            });
        });

        // ابزارهای شیمی
        document.getElementById('stoichiometryTool').addEventListener('click', function() {
            alert('ابزار استوکیومتری در حال توسعه است!');
        });

        document.getElementById('molecularTool').addEventListener('click', function() {
            alert('شبیه‌ساز مولکولی در حال توسعه است!');
        });

        document.getElementById('concentrationTool').addEventListener('click', function() {
            alert('محاسبه گر غلظت در حال توسعه است!');
        });

        // نمایش اطلاعات هیدروژن به صورت پیش‌فرض
        document.addEventListener('DOMContentLoaded', function() {
            elementDetails.style.display = 'block';
        });
    </script>
</body>
